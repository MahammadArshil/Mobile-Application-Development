<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="55dp"
        android:id="@+id/txt_1"
        android:background="@color/black"
        android:textColor="@color/white"
        android:textSize="35dp"
        android:textAlignment="center"
        android:textStyle="bold|italic"
        android:text="Check Box Example."/>
    <LinearLayout
        android:id="@+id/linearlayout"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="#C56E6E"
        android:orientation="vertical"
        android:layout_below="@id/txt_1"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp">
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_1"
        android:text="JAVA"
        android:checked="false"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#A30404"
        android:id="@+id/ch_1"/>
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ch_1"
        android:id="@+id/ch_2"
        android:checked="false"
        android:text="PHP"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#041270"/>
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ch_2"
        android:id="@+id/ch_3"
        android:checked="false"
        android:text="ANDROID"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#686303"/>
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ch_3"
        android:id="@+id/ch_4"
        android:checked="false"
        android:text="PYTHON"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#0E4A55"/>
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ch_4"
        android:id="@+id/ch_5"
        android:checked="false"
        android:text="UNITY 3D"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#682308"/>
    </LinearLayout>
    <Button
        android:id="@+id/btn_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:layout_below="@+id/linearlayout"/>
</RelativeLayout>