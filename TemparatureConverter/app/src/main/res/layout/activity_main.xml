<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#4B96E8">
    <ImageView
        android:id="@+id/image_1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logo"/>
    <LinearLayout
        android:id="@+id/linear_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/image_1"
        android:layout_margin="11dp"
        android:padding="8dp">
        <TextView
            android:id="@+id/txt_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter Temprature(°C):"
            android:textSize="24sp"
            android:textColor="#000000"/>
        <EditText
            android:id="@+id/et_celcius"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0"
            android:textAlignment="textEnd"
            android:textSize="20sp"
            android:textColor="#000"
            android:inputType="number"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/linear_1"
        android:layout_margin="11dp"
        android:padding="8dp">
        <TextView
            android:id="@+id/txt_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter Temprature(°F):"
            android:textSize="24sp"
            android:textColor="#000000"/>
        <EditText
            android:id="@+id/et_fahrenheit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0"
            android:textAlignment="textEnd"
            android:textSize="20sp"
            android:textColor="#000"
            android:inputType="number"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/linear_2"
        android:layout_margin="11dp"
        android:padding="8dp">
        <TextView
            android:id="@+id/txt_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter Temprature(°K):"
            android:textSize="24sp"
            android:textColor="#000000"/>
        <EditText
            android:id="@+id/et_kelvin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0"
            android:textAlignment="textEnd"
            android:textSize="20sp"
            android:textColor="#000"
            android:inputType="number"/>
    </LinearLayout>
    <Button
        android:id="@+id/btn_convert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear_3"
        android:layout_centerHorizontal="true"
        android:text=" Convert "
        android:textSize="24sp"
        android:backgroundTint="#F78E24"/>
</RelativeLayout>